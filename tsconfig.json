{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "rootDirs": [],
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "~modules/*": ["modules/*"],
      "~shared/*": ["shared/*"],
      "~database/*": ["database/*"],
      "~config/*": ["config/*"],
      "~middlewares/*": ["middlewares/*"],
      "~errors/*": ["errors/*"],
      "~interceptors/*": ["interceptors/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
